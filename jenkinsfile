pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID = credentials('aws-terraform-creds')
        AWS_SECRET_ACCESS_KEY = credentials('aws-terraform-creds')
    }

    stages {

        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }

        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve'
            }
        }

        stage('Wait 3 Minutes') {
            steps {
                sh 'sleep 180'
            }
        }

        stage('Terraform Destroy') {
            steps {
                sh 'terraform destroy -auto-approve'
            }
        }
    }
}
