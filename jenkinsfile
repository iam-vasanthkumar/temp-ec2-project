pipeline {
    agent any

    environment {
        EC2_IP = ""
    }

    stages {

        stage('Terraform Init') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding',
                credentialsId: 'aws-terraform-creds']]) {
                    sh 'terraform init'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding',
                credentialsId: 'aws-terraform-creds']]) {
                    sh 'terraform apply -auto-approve'
                }
            }
        }

        stage('Fetch EC2 Public IP') {
            steps {
                script {
                    EC2_IP = sh(
                        script: "terraform output -raw ec2_public_ip",
                        returnStdout: true
                    ).trim()

                    env.EC2_IP = EC2_IP
                    echo "EC2 Public IP: ${env.EC2_IP}"
                }
            }
        }

        stage('Wait for EC2 to Boot') {
            steps {
                sh 'sleep 120'
            }
        }

        stage('Compile Java Code') {
            steps {
                sh 'javac app/HelloWorld.java'
            }
        }

        stage('Copy Class to EC2') {
            steps {
                withCredentials([file(credentialsId: 'ec2-pem-key', variable: 'PEM_FILE')]) {
                    sh '''
                    chmod 400 $PEM_FILE
                    scp -o StrictHostKeyChecking=no -i $PEM_FILE app/HelloWorld.class ec2-user@$EC2_IP:/home/ec2-user
                    '''
                }
            }
        }

        stage('Run Java App in EC2') {
            steps {
                withCredentials([file(credentialsId: 'ec2-pem-key', variable: 'PEM_FILE')]) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no -i $PEM_FILE ec2-user@$EC2_IP "java HelloWorld"
                    '''
                }
            }
        }

        stage('Wait 5 Minutes') {
            steps {
                sh 'sleep 300'
            }
        }

        stage('Terraform Destroy') {
            steps {
                withCredentials([[$class: 'AmazonWebServicesCredentialsBinding',
                credentialsId: 'aws-terraform-creds']]) {
                    sh 'terraform destroy -auto-approve'
                }
            }
        }
    }
}
